{{> topnav}}
{{> sidebar}}

<div class="pusher">
    <div class="main-content">
        </br>   
        {{> breadcrumb}}           
        <div class="ui grid stackable padded">
            <div class="eight wide computer eight wide tablet sixteen wide mobile column">
                <div class="ui segment">
                    <h4 class="ui horizontal divider header">
                        <i class="user plus icon"></i>
                        Semestre
                    </h4>
                    <div class="ui selection fluid dropdown">
                        <input type="hidden" name="gender">
                        <i class="dropdown icon"></i>
                        <div class="default text">Semestre</div>
                        <div class="menu">
                            {{#each semestre}}
                                <div class="item" data-value="{{this.value}}">{{this.value}}</div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="ui divider"></div>
                    <table class="ui celled table" id="tabela_semestre">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Semestre</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each user_semestre}}
                                <tr>
                                    <td width="7%" class="center aligned">{{this.id}}</td>
                                    <td><a href="#" class="redirecionaTabela" data-id="{{this.id_aluno}}">{{this.nome}}</a></td>
                                    <td width="11%" class="center aligned">{{this.semestre}}</td>
                                    {{#ifCond this.estado '==' 1}}
                                        <td width="9%" class="center aligned positive" data-tooltip="Aprovado" data-position="top center" data-variation="mini">
                                            <i class="icon checkmark"></i>
                                        </td>
                                        {{/ifCond}}
                                        {{!-- Em Analise --}}
                                        {{#ifCond this.estado '==' 2}}
                                        <td width="9%" class="center aligned warning" data-tooltip="Em Analise" data-position="top center" data-variation="mini">
                                            <i class="orange icon spinner"></i>
                                        </td>
                                        {{/ifCond}}
                                        {{!-- Reprovado --}}
                                        {{#ifCond this.estado '==' 3}}
                                        <td width="9%" class="center aligned error" data-tooltip="Reprovado" data-position="top center" data-variation="mini">
                                            <i class="icon attention"></i>
                                        </td>
                                        {{/ifCond}}
                                </tr>
                            {{/each}}                                
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="eight wide computer eight wide tablet sixteen wide mobile column">
                <div class="ui segment">
                    <h4 class="ui horizontal divider header">
                        <i class="user icon"></i>
                        Alunos
                    </h4>                    
                    <div class="ui divider"></div>
                    <table class="ui celled table" id="tabela_all">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Semestre</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each user_all}}
                                <tr>
                                    <td width="7%" class="center aligned">{{this.id}}</td>
                                    <td><a href="#" class="redirecionaTabela" data-id="{{this.id_aluno}}">{{this.nome}}</a></td>
                                    <td width="11%" class="center aligned">{{this.semestre}}</td>
                                    {{#ifCond this.estado '==' 1}}
                                        <td width="9%" class="center aligned positive" data-tooltip="Aprovado" data-position="top center" data-variation="mini">
                                            <i class="icon checkmark"></i>
                                        </td>
                                        {{/ifCond}}
                                        {{!-- Em Analise --}}
                                        {{#ifCond this.estado '==' 2}}
                                        <td width="9%" class="center aligned warning" data-tooltip="Em Analise" data-position="top center" data-variation="mini">
                                            <i class="orange icon spinner"></i>
                                        </td>
                                        {{/ifCond}}
                                        {{!-- Reprovado --}}
                                        {{#ifCond this.estado '==' 3}}
                                        <td width="9%" class="center aligned error" data-tooltip="Reprovado" data-position="top center" data-variation="mini">
                                            <i class="icon attention"></i>
                                        </td>
                                        {{/ifCond}}
                                </tr>
                            {{/each}}                                
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
